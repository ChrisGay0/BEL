<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

	<display-name>registration-webapp</display-name>

  	<error-page>
  		<error-code>500</error-code>
  		<location>/WEB-INF/jsp/error500.jsp</location>
  	</error-page>
  
  	<error-page>
  		<error-code>404</error-code>
  		<location>/WEB-INF/jsp/error404.jsp</location>
  	</error-page>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
				classpath:com/cgsolutions/security/service/services.xml,
				classpath:com/cgsolutions/security/service/access.xml
		</param-value>
	</context-param>

	<filter>
		<filter-name>OpenSessionInViewFilter</filter-name>
		<filter-class>
			com.cgsolutions.security.filter.CustomOpenSessionInViewFilter
		</filter-class>
	</filter>
	
	<filter>
		<filter-name>SecurityFilter</filter-name>
		<filter-class>
			com.cgsolutions.security.filter.SecurityFilter	
		</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>OpenSessionInViewFilter</filter-name>
		<url-pattern>*.htm</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>OpenSessionInViewFilter</filter-name>
		<url-pattern>*.pdf</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>OpenSessionInViewFilter</filter-name>
		<url-pattern>*.xls</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>SecurityFilter</filter-name>
		<url-pattern>*.htm</url-pattern>
	</filter-mapping>
	
	<session-config>
    	<session-timeout>120</session-timeout>
  	</session-config>
	
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>htm</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>report</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>htm</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>report</servlet-name>
		<url-pattern>*.pdf</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>report</servlet-name>
		<url-pattern>*.xls</url-pattern>
	</servlet-mapping>
</web-app>